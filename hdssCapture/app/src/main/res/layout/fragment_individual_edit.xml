<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="individual"
            type="org.openhds.hdsscapture.entity.Individual" />

        <variable
            name="mother"
            type="org.openhds.hdsscapture.entity.Individual" />

        <variable
            name="father"
            type="org.openhds.hdsscapture.entity.Individual" />


        <import type="android.view.View" />

        <variable
            name="eventname"
            type="String" />

    </data>

    <LinearLayout
        android:id="@+id/INDIVIDUAL_LAYOUT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".Views.IndividualViewFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/individual"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="true"
            android:textSize="30sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="5dp"
            android:background="@color/colorPrimaryDark" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="5dp"
                    android:hint="@string/fw"
                    android:text="@string/fw">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/individual_fw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={individual.fw_uuid}"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="textPersonName"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="5dp"
                    android:hint="@string/ind_uuid"
                    android:text="@string/ind_uuid">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/individual_uuid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={individual.uuid}"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="textPersonName"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:visibility="gone"
                    android:id="@+id/button_individual_insertDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/visitDate"
                    tools:ignore="DuplicateSpeakableTextCheck"
                    app:icon="@drawable/ic_baseline_calendar_month_24" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/individual_insertDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:text="@={individual.insertDate}"
                    android:ems="10"
                    android:required="true"
                    android:minHeight="30dp"
                    android:textSize="20sp"
                    tools:ignore="TextContrastCheck" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="5dp"
                    android:hint="@string/startdate"
                    android:text="@string/startdate">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:id="@+id/editTextStartDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"/>
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="5dp"
                    android:inputType="text"
                    android:hint="@string/ind_extid"
                    android:text="@string/ind_extid">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:id="@+id/individual_extid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={individual.extId}"
                        android:inputType="textPersonName"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="5dp"
                    android:hint="@string/household"
                    android:text="@string/household">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/hohid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={individual.hohID}"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="textPersonName"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="5dp"
                    android:hint="@string/firstname"
                    android:text="@string/firstname">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/individual_firstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={individual.firstName}"
                        android:required="true"
                        android:inputType="textPersonName|textCapCharacters"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="5dp"
                    android:hint="@string/lastname"
                    android:text="@string/lastname">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/individual_lastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={individual.lastName}"
                        android:required="true"
                        android:inputType="textPersonName|textCapCharacters"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:text="@string/other_name"/>

                <org.openhds.searchSpinner.SearchableSpinner
                    android:id="@+id/other"
                    selection="@{individual.other}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:minHeight="48dp"
                    android:onItemSelected="@{individual::setOther}"
                    android:padding="15dp"
                    android:spinnerMode="dialog" />

                <TextView
                    goneUnless="@{individual.other==1}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ind_nick" />

                <EditText
                    goneUnless="@{individual.other==1}"
                    android:id="@+id/individual_nickName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:inputType="textCapCharacters"
                    android:text="@={individual.otherName}" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:text="@string/gh"/>

                <org.openhds.searchSpinner.SearchableSpinner
                    android:id="@+id/gh"
                    selection="@{individual.gh}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/gh"
                    android:gravity="left"
                    android:minHeight="48dp"
                    android:onItemSelected="@{individual::setGh}"
                    android:padding="15dp"
                    android:spinnerMode="dialog" />

                <com.google.android.material.textfield.TextInputLayout
                    goneUnless="@{individual.gh==1}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="5dp"
                    android:hint="@string/ghanacard"
                    android:text="@string/ghanacard">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/ghanacard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={individual.ghanacard}"
                        android:inputType="textPersonName|textCapCharacters"/>
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/button_individual_Dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_baseline_calendar_month_24"
                    app:endIconTint="@color/colorPrimary"
                    android:hint="@string/actual_dob">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={individual.dob}"
                        android:enabled="false"
                        android:inputType="textPersonName"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_baseline_calendar_month_24"
                    app:endIconTint="@color/colorPrimary"
                    android:hint="@string/age">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/individ_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:text="@string/dob"/>

                <org.openhds.searchSpinner.SearchableSpinner
                    android:id="@+id/dobAspect"
                    selection="@{individual.dobAspect}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:minHeight="48dp"
                    android:onItemSelected="@{individual::setDobAspects}"
                    android:padding="10dp"
                    android:required="true"
                    android:spinnerMode="dialog" />

                <com.google.android.material.textfield.TextInputLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="5dp"
                    android:hint="@string/age"
                    android:text="@string/age">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/individual_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:text="@string/gender"/>

                <org.openhds.searchSpinner.SearchableSpinner
                    android:id="@+id/gender"
                    selection="@{individual.gender}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/gender"
                    android:gravity="left"
                    android:minHeight="48dp"
                    android:onItemSelected="@{individual::setGenders}"
                    android:padding="10dp"
                    android:required="true"
                    android:spinnerMode="dialog" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:text="@string/mother"/>

                <org.openhds.searchSpinner.SearchableSpinner
                    android:visibility="gone"
                    android:id="@+id/mother"
                    selection="@{individual.mother}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:minHeight="48dp"
                    android:onItemSelected="@{individual::setMother}"
                    android:padding="15dp"
                    android:spinnerMode="dialog" />

                <Button
                    android:id="@+id/button_individual_mother"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="@string/mother_extid"
                    tools:ignore="DuplicateSpeakableTextCheck"
                    style="@style/SupervisorButton"
                    android:layout_gravity="center"
                    app:icon="@drawable/ic_baseline_pregnant_woman_24" />

                <com.google.android.material.textfield.TextInputLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="5dp"
                    android:hint="@string/motherid"
                    android:text="@string/motherid">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/individual_mother"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={individual.mother_uuid}"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="textPersonName|textCapCharacters"/>
                </com.google.android.material.textfield.TextInputLayout>

                <EditText
                    android:visibility="gone"
                    android:id="@+id/mother_age"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:focusable="false"
                    android:text="@{individual.m_age}"
                    android:focusableInTouchMode="false"
                    android:inputType="number" />

                <include
                    android:id="@+id/mothers"
                    layout="@layout/fragment_individual_mother"
                    bind:mother="@{mother}" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:text="@string/father"/>

                <org.openhds.searchSpinner.SearchableSpinner
                    android:visibility="gone"
                    android:id="@+id/father"
                    selection="@{individual.father}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/father"
                    android:gravity="left"
                    android:minHeight="48dp"
                    android:onItemSelected="@{individual::setFather}"
                    android:padding="15dp"
                    android:spinnerMode="dialog" />

                <Button
                    android:id="@+id/button_individual_father"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="@string/father_extid"
                    tools:ignore="DuplicateSpeakableTextCheck"
                    style="@style/SupervisorButton"
                    android:layout_gravity="center"
                    app:icon="@drawable/ic_baseline_person_24" />

                <com.google.android.material.textfield.TextInputLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="5dp"
                    android:hint="@string/fatherid"
                    android:text="@string/fatherid">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/individual_father"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={individual.father_uuid}"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="textPersonName|textCapCharacters"/>
                </com.google.android.material.textfield.TextInputLayout>

                <include
                    android:id="@+id/fathers"
                    layout="@layout/fragment_individual_father"
                    bind:father="@{father}" />


            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/linearLayout_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/buttonSaveClose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                style="@style/SupervisorButton"
                android:text="@string/savecontinuedata" />

            <Button
                android:id="@+id/buttonClose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                style="@style/CloseButton"
                android:text="@string/closedata" />

        </LinearLayout>

    </LinearLayout>

</layout>