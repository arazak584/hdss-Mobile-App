<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Activity.MapActivity">

    <!-- Filter Section -->
    <LinearLayout
        android:id="@+id/filterSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5F5F5"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Filters"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <AutoCompleteTextView
                android:id="@+id/villageNameInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Village Name"
                android:inputType="textCapCharacters"
                android:completionThreshold="1"
                android:layout_marginEnd="4dp"
                android:background="@android:drawable/edit_text"
                android:padding="8dp"/>

            <AutoCompleteTextView
                android:id="@+id/compnoInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Compno"
                android:inputType="textCapCharacters"
                android:completionThreshold="1"
                android:layout_marginStart="4dp"
                android:background="@android:drawable/edit_text"
                android:padding="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/applyFilterButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Apply Filter"
                android:layout_marginEnd="4dp"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/clearFilterButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear Filter"
                android:layout_marginStart="4dp"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Map View -->
    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/filterSection"
        app:layout_constraintBottom_toTopOf="@id/routeInfoText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Route Info -->
    <TextView
        android:id="@+id/routeInfoText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#CC000000"
        android:textColor="#FFFFFF"
        android:padding="8dp"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/clearRouteButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Distance: 5.2 km\nEst. Time: 12 min"
        tools:visibility="visible"/>

    <!-- Clear Route Button -->
    <Button
        android:id="@+id/clearRouteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Route"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>