<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/residency_fragment">

    <data>

        <variable
            name="residency"
            type="org.openhds.hdsscapture.entity.Residency" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/residency"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="5dp"
        android:background="@color/colorPrimaryDark" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.ResidencyFragment">

        <LinearLayout
            android:id="@+id/RESIDENCY_LAYOUT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="5dp"
                android:hint="@string/fw"
                android:text="@string/fw">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fw"
                    android:text="@={residency.fw}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"/>
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/button_residency_insertDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/visitDate"
                tools:ignore="DuplicateSpeakableTextCheck"
                app:icon="@drawable/ic_baseline_calendar_month_24" />

            <TextView
                android:id="@+id/editText_insertDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:ems="10"
                android:minHeight="40dp"
                android:text="@={residency.insertDate}"
                android:textSize="20sp"
                tools:ignore="TextContrastCheck" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="5dp"
                android:hint="@string/uuid">
                android:text="@string/uuid">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/uuid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={residency.uuid}"
                    android:inputType="textPersonName"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="5dp"
                android:hint="@string/ind_extid">
                android:text="@string/ind_extid">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/extid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={residency.extId}"
                    android:inputType="textPersonName"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="5dp"
                android:hint="@string/location_select">
                android:text="@string/location_select">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/location_extid"
                    android:text="@={residency.location}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="5dp"
                android:hint="@string/household_select">
                android:text="@string/household_select">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/socialgroup"
                    android:text="@={residency.socialgroup}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="5dp"
                android:hint="@string/visitid">
                android:text="@string/household_select">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/visitid"
                    android:text="@={residency.socialgroup}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="5dp"
                android:text="@string/starttype"/>

            <Spinner
                android:id="@+id/starttype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/starttype"
                android:gravity="left"
                android:textColor="#000301"
                android:padding="10dp"/>

            <Button
                android:id="@+id/button_residency_startDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/startdate"
                tools:ignore="DuplicateSpeakableTextCheck"
                app:icon="@drawable/ic_baseline_calendar_month_24" />

            <TextView
                android:id="@+id/editText_startDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:ems="10"
                android:minHeight="40dp"
                android:text="@={residency.startDate}"
                android:textSize="20sp"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="5dp"
                android:text="@string/endtype"/>

            <Spinner
                android:id="@+id/endtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/endtype"
                android:gravity="left"
                android:textColor="#000301"
                android:padding="10dp"/>

            <Button
                android:id="@+id/button_residency_endDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enddate"
                tools:ignore="DuplicateSpeakableTextCheck"
                app:icon="@drawable/ic_baseline_calendar_month_24" />

            <TextView
                android:id="@+id/editText_endDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:ems="10"
                android:minHeight="40dp"
                android:text="@={residency.endDate}"
                android:textSize="20sp"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="5dp"
                android:text="@string/rltn_head"/>

            <Spinner
                android:id="@+id/rltn_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="#000301"
                android:padding="10dp"/>

        <LinearLayout
            goneUnless="@{residency.startType==1}"
            android:id="@+id/INMIGRATION_LAYOUT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="15dp"
                android:text="@string/inmigrationsec"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="5dp"
                android:text="@string/migtype"/>

            <Spinner
                android:id="@+id/migtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="#000301"
                android:padding="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="5dp"
                android:text="@string/origin"/>

            <Spinner
                android:id="@+id/origin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="#000301"
                android:padding="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="5dp"
                android:text="@string/reason"/>

            <Spinner
                android:id="@+id/reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="#000301"
                android:padding="20dp"/>

        </LinearLayout>

            <LinearLayout
                goneUnless="@{residency.endType==2}"
                android:id="@+id/OUTMIGRATION_LAYOUT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="15dp"
                    android:text="@string/outmigrationsec"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="5dp"
                    android:text="@string/destination"/>

                <Spinner
                    android:id="@+id/destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="#000301"
                    android:padding="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="5dp"
                    android:text="@string/reason_out"/>

                <Spinner
                    android:id="@+id/omg_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="#000301"
                    android:padding="20dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/button_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="60dip"
                android:text="@string/text_submit"
                android:textSize="24sp" />

        </LinearLayout>


    </ScrollView>
    </LinearLayout>


</layout>