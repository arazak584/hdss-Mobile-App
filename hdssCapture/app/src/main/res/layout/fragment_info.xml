<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="270dp"
    android:padding="0dp"
    tools:context=".fragment.InfoFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="270dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >

        <TextView
            android:id="@+id/text0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            />


        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/versions"
            android:textColor="@color/pakistan_green"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            />


        <Button
            android:id="@+id/button_url"
            android:text="Download Update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_gravity="top|center_horizontal"
            android:textColor="@color/white"
            android:backgroundTint="@color/pakistan_green"
            android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/button_resetDatabase"
            android:text="Reset Database"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:layout_gravity="top|center_horizontal"
            android:textColor="@color/white"
            android:backgroundTint="#8A080D"
            android:layout_marginBottom="5dp"/>





    </androidx.cardview.widget.CardView>

</FrameLayout>