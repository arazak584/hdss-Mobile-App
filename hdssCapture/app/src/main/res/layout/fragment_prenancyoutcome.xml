<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/outcome_fragment">


    <data>

        <variable
            name="pregoutcome"
            type="org.openhds.hdsscapture.entity.Pregnancyoutcome" />

        <variable
            name="outcome"
            type="org.openhds.hdsscapture.entity.Outcome" />

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/pregoutcome"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="5dp"
        android:background="@color/colorPrimaryDark" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.PrenancyoutcomeFragment">

    <LinearLayout
        android:id="@+id/OUTCOME_LAYOUT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="5dp"
            android:hint="@string/fw"
            android:text="@string/fw">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fw"
                android:text="@={pregoutcome.fw}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/button_relationship_insertDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/visitDate"
            tools:ignore="DuplicateSpeakableTextCheck"
            app:icon="@drawable/ic_baseline_calendar_month_24" />

        <TextView
            android:id="@+id/editText_insertDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:minHeight="40dp"
            android:text="@={pregoutcome.insertDate}"
            android:textSize="20sp"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/button_individual_mother"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mother_extid"
            tools:ignore="DuplicateSpeakableTextCheck"
            app:icon="@drawable/ic_baseline_pregnant_woman_24" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="5dp"
            android:hint="@string/motherid">
            android:text="@string/motherid">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/preg_mother"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={pregoutcome.mother}"
                android:required="true"
                android:inputType="textPersonName|textCapCharacters"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/button_individual_father"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/father_extid"
            tools:ignore="DuplicateSpeakableTextCheck"
            app:icon="@drawable/ic_baseline_person_24" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="5dp"
            android:hint="@string/fatherid">
            android:text="@string/fatherid">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/preg_father"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={pregoutcome.father}"
                android:required="true"
                android:inputType="textPersonName|textCapCharacters"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="5dp"
            android:hint="@string/uuid">
            android:text="@string/uuid">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/uuid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={pregoutcome.uuid}"
                android:inputType="textPersonName"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="5dp"
            android:hint="@string/visitid">
            android:text="@string/visitid">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/visitid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={pregoutcome.visitid}"
                android:inputType="textPersonName"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="5dp"
            android:hint="@string/childeverborn">
            android:text="@string/childeverborn">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/childeverborn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={pregoutcome.childEverborn}"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="5dp"
            android:hint="@string/livebirth">
            android:text="@string/livebirth">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/livebirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={pregoutcome.numberofBirths}"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="5dp"
            android:text="@string/type"/>

        <Spinner
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="#000301"
            android:padding="10dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="5dp"
            android:text="@string/father_extid"/>

        <Spinner
            android:id="@+id/father_extid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="#000301"
            android:padding="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="5dp"
            android:text="@string/birthplace"/>

        <Spinner
            android:id="@+id/birthplace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="#000301"
            android:padding="10dp"/>

        <Button
            android:id="@+id/button_residency_startDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/outcomeDate"
            tools:ignore="DuplicateSpeakableTextCheck"
            app:icon="@drawable/ic_baseline_calendar_month_24" />

        <TextView
            android:id="@+id/editText_outcomeDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:minHeight="40dp"
            android:text="@={pregoutcome.outcomeDate}"
            android:textSize="20sp"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="@string/form_complete"/>

        <Spinner
            android:id="@+id/individual_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            selection="@{pregoutcome.complete}"
            android:onItemSelected="@{pregoutcome::setComplete}"
            android:gravity="left"
            android:textColor="#000301"
            android:padding="15dp"/>

        <LinearLayout
            android:id="@+id/linearLayout_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/buttonSaveClose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/saveclosedata" />

            <Button
                android:id="@+id/buttonClose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/closedata" />

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
    </LinearLayout>

</layout>