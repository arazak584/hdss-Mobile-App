<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="pregoutcome2"
            type="org.openhds.hdsscapture.entity.Outcome" />

    </data>

    <LinearLayout
        android:id="@+id/OUTCOME_LAYOUT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Child-2"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="5dp"
            android:hint="@string/uuid">
            android:text="@string/uuid">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/out2_uuid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={pregoutcome2.uuid}"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textPersonName"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="5dp"
            android:hint="@string/motherid">
            android:text="@string/motherid">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/out2_preguuid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={pregoutcome2.mother_uuid}"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textPersonName"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="@string/pregoutcome"/>

        <Spinner
            android:id="@+id/out2_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            selection="@{pregoutcome2.type}"
            android:onItemSelected="@{pregoutcome2::setType}"
            android:gravity="left"
            android:textColor="#000301"
            android:padding="15dp"/>

        <Button
            goneUnless="@{pregoutcome2.type==1}"
            android:id="@+id/button_out2_uuid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_child" />

        <com.google.android.material.textfield.TextInputLayout
            goneUnless="@{pregoutcome2.type==1}"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="5dp"
            android:hint="@string/childextid">
            android:text="@string/childextid">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/out2_child_extid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={pregoutcome2.childuuid}"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textPersonName"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            goneUnless="@{pregoutcome2.type==1}"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="5dp"
            android:hint="@string/actual_dob">
            android:text="@string/actual_dob">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/out2_child_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={pregoutcome2.dob}"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textPersonName"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</layout>