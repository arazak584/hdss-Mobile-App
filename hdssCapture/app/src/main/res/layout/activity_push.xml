<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MidnightBlue"
    tools:context=".Activity.PushActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_send_to_server"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonSendLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_location"
            android:backgroundTint="@color/DarkSlateGray"
            app:icon="@drawable/push"/>

        <TextView
            android:id="@+id/textViewSendLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonSendVisit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_visit"
            android:backgroundTint="@color/DarkSlateGray"
            app:icon="@drawable/push"/>

        <TextView
            android:id="@+id/textViewSendVisit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonSendList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_list"
            android:backgroundTint="@color/DarkSlateGray"
            app:icon="@drawable/push"/>

        <TextView
            android:id="@+id/textViewSendList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

    <Button
            android:id="@+id/buttonSendIndividual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_individual"
        android:backgroundTint="@color/DarkSlateGray"
            app:icon="@drawable/push"/>

        <TextView
            android:id="@+id/textViewSendIndividual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonSendSocialgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_socialgroup"
            android:backgroundTint="@color/DarkSlateGray"
            app:icon="@drawable/push"/>

        <TextView
            android:id="@+id/textViewSendSocialgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />


        <Button
            android:id="@+id/buttonSendRelationship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_relationship"
            android:backgroundTint="@color/DarkSlateGray"
            app:icon="@drawable/push"/>

        <TextView
            android:id="@+id/textViewSendRelationship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonSendPregnancy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_pregnancy"
            android:backgroundTint="@color/DarkSlateGray"
            app:icon="@drawable/push"/>

        <TextView
            android:id="@+id/textViewSendPregnancy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonSendOutcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_pregoutcome"
            android:backgroundTint="@color/DarkSlateGray"
            app:icon="@drawable/push"/>

        <TextView
            android:id="@+id/textViewSendOutcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonSendOutcomes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_outcome"
            android:backgroundTint="@color/DarkSlateGray"
            app:icon="@drawable/push"/>

        <TextView
            android:id="@+id/textViewSendOutcomes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />


        <Button
            android:id="@+id/buttonSendDemography"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_demography"
            android:backgroundTint="@color/DarkSlateGray"
            app:icon="@drawable/push"/>

        <TextView
            android:id="@+id/textViewSendDemography"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonSendEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_death"
            android:backgroundTint="@color/DarkSlateGray"
            app:icon="@drawable/push"/>

        <TextView
            android:id="@+id/textViewSendEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonSendSocio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_profile"
            android:backgroundTint="@color/DarkSlateGray"
            app:icon="@drawable/push"/>

        <TextView
            android:id="@+id/textViewSendSocio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonSendResidency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_residency"
            android:backgroundTint="@color/DarkSlateGray"
            app:icon="@drawable/push"/>

        <TextView
            android:id="@+id/textViewSendResidency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonSendImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_inmigration"
            android:backgroundTint="@color/DarkSlateGray"
            app:icon="@drawable/push"/>

        <TextView
            android:id="@+id/textViewSendImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonSendOmg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_outmigration"
            android:backgroundTint="@color/DarkSlateGray"
            app:icon="@drawable/push"/>

        <TextView
            android:id="@+id/textViewSendOmg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonSendAmend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
