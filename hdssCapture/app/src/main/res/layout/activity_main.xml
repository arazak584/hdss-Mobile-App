<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingBottom="32dp">

            <!-- Header -->
            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp"
                android:text="@string/versions"
                android:textColor="#0F172A"
                android:textSize="32sp"
                android:fontFamily="sans-serif-medium"
                android:visibility="gone" />

            <!-- Grid Layout for Main Actions using LinearLayout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Row 1: Data Collection & Sync Data -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Data Collection -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnDataCapture"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="3dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_teal"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageButton
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/circular_white_bg"
                                android:contentDescription="Data Collection"
                                android:padding="14dp"
                                android:scaleType="fitCenter"
                                android:src="@android:drawable/ic_dialog_info"
                                app:tint="#10B981" />
<!--                            android:onClick="startAppInfo"-->

                            <TextView
                                android:id="@+id/btnupdate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/datac"
                                android:gravity="center"
                                android:textAllCaps="false"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Sync Data -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnSyncData"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="3dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_teal"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageButton
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/circular_white_bg"
                                android:contentDescription="Sync Data"
                                android:padding="14dp"
                                android:scaleType="fitCenter"
                                android:src="@android:drawable/ic_dialog_info"
                                app:tint="#3B82F6" />
<!--                            android:onClick="startSyncInfo"-->

                            <TextView
                                android:id="@+id/btnpush"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/syncd"
                                android:gravity="center"
                                android:textAllCaps="false"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Row 2: Report & Query -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Report -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnReports"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="3dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_teal"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageButton
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/circular_white_bg"
                                android:contentDescription="Report"
                                android:padding="14dp"
                                android:scaleType="fitCenter"
                                android:src="@android:drawable/ic_dialog_info"
                                app:tint="#8B5CF6" />
<!--                            android:onClick="startReportInfo"-->

                            <TextView
                                android:id="@+id/btnreport"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/rp"
                                android:gravity="center"
                                android:textAllCaps="false"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Query -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnQueries"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="3dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_teal"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageButton
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/circular_white_bg"
                                android:contentDescription="Query"
                                android:padding="14dp"
                                android:scaleType="fitCenter"
                                android:src="@android:drawable/ic_dialog_info"
                                app:tint="#F59E0B" />
<!--                            android:onClick="startQueryInfo"-->

                            <TextView
                                android:id="@+id/btnquerry"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/query"
                                android:gravity="center"
                                android:textAllCaps="false"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Row 3: View & Reject -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- View -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnViews"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="3dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_teal"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageButton
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/circular_white_bg"
                                android:contentDescription="View"
                                android:padding="14dp"
                                android:scaleType="fitCenter"
                                android:src="@android:drawable/ic_dialog_info"
                                app:tint="#06B6D4" />
<!--                            android:onClick="startViewInfo"-->

                            <TextView
                                android:id="@+id/btnloc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/view"
                                android:gravity="center"
                                android:textAllCaps="false"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Reject -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnRejections"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="3dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_teal"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageButton
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/circular_white_bg"
                                android:contentDescription="Reject"
                                android:padding="14dp"
                                android:scaleType="fitCenter"
                                android:src="@android:drawable/ic_dialog_info"
                                app:tint="#EF4444" />
<!--                            android:onClick="startRejectInfo"-->

                            <TextView
                                android:id="@+id/btnReject"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/reject"
                                android:gravity="center"
                                android:textAllCaps="false"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Row 4: Download & Work Schedule -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Download -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnDownload"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="3dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_teal"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageButton
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/circular_white_bg"
                                android:contentDescription="Download"
                                android:padding="14dp"
                                android:scaleType="fitCenter"
                                android:src="@android:drawable/ic_dialog_info"
                                app:tint="#14B8A6" />
<!--                            android:onClick="startDownloadInfo"-->

                            <TextView
                                android:id="@+id/btnpull"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/downlods"
                                android:gravity="center"
                                android:textAllCaps="false"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Work Schedule -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnWorkSchedule"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="3dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_teal"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageButton
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/circular_white_bg"
                                android:contentDescription="Schedule"
                                android:padding="14dp"
                                android:scaleType="fitCenter"
                                android:src="@android:drawable/ic_dialog_info"
                                app:tint="#6366F1" />
<!--                            android:onClick="startScheduleInfo"-->

                            <TextView
                                android:id="@+id/btnSchedule"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/workshedule"
                                android:gravity="center"
                                android:textAllCaps="false"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Row 5: Site Map & Available Compounds -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Site Map -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnSiteMap"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="3dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_teal"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageButton
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/circular_white_bg"
                                android:contentDescription="Map"
                                android:padding="14dp"
                                android:scaleType="fitCenter"
                                android:src="@android:drawable/ic_dialog_info"
                                app:tint="#EC4899" />
<!--                            android:onClick="startMapInfo"-->

                            <TextView
                                android:id="@+id/btnMap"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/sitemap"
                                android:gravity="center"
                                android:textAllCaps="false"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Available Compounds -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnLastCompounds"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="3dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_teal"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageButton
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/circular_white_bg"
                                android:contentDescription="Compounds"
                                android:padding="14dp"
                                android:scaleType="fitCenter"
                                android:src="@android:drawable/ic_dialog_info"
                                app:tint="#F97316" />
<!--                            android:onClick="startCompoundsInfo"-->

                            <TextView
                                android:id="@+id/btnCompounds"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Available Compounds"
                                android:gravity="center"
                                android:textAllCaps="false"
                                android:textColor="#FFFFFF"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

            </LinearLayout>

            <!-- Progress Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Progress Overview"
                        android:textColor="#0F172A"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <FrameLayout
                        android:layout_width="110dp"
                        android:layout_height="110dp">

                        <ProgressBar
                            android:id="@+id/circularProgressBarBackground"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="100"
                            android:progressDrawable="@drawable/circular_progress_background" />

                        <ProgressBar
                            android:id="@+id/circularProgressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="50"
                            android:progressDrawable="@drawable/circular_progress_bar" />

                        <TextView
                            android:id="@+id/textInMiddle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text=""
                            android:textColor="#0F172A"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                    </FrameLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Info Button (Hidden) -->
            <Button
                android:id="@+id/btninfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/btn_setting"
                android:drawablePadding="8dp"
                android:text="@string/info"
                android:textColor="#64748B"
                android:textSize="14sp"
                android:visibility="gone" />

            <!-- Reset Database Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_resetDatabase"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FEE2E2"
                android:drawableStart="@drawable/delete"
                android:drawablePadding="8dp"
                android:text="@string/reset"
                android:textAllCaps="false"
                android:textColor="#DC2626"
                android:textSize="15sp"
                android:textStyle="bold"
                app:cornerRadius="16dp"
                app:icon="@drawable/delete"
                app:iconTint="#DC2626" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_url"
                    style="@style/PrimaryButton"
                    android:layout_width="0dp"
                    android:layout_height="54dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/downloads"
                    android:drawablePadding="6dp"
                    android:text="Download Update"
                    android:textAllCaps="false"
                    android:textSize="13sp"
                    app:cornerRadius="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_settings"
                    style="@style/PrimaryButton"
                    android:layout_width="0dp"
                    android:layout_height="54dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/downloads"
                    android:drawablePadding="6dp"
                    android:text="@string/setting"
                    android:textAllCaps="false"
                    android:textSize="13sp"
                    app:cornerRadius="16dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>