<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="50dp"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">
<!--    android:background="@drawable/background"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnupdate"
                android:layout_width="200dp"
                android:layout_height="165dp"
                android:background="@drawable/btnd_rone_dgbevel"
                android:drawableTop="@mipmap/database_64"
                android:drawablePadding="10dp"
                android:elevation="3dp"
                android:maxLines="2"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:stateListAnimator="@null"
                android:text="@string/datac"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="25dp"
                android:textStyle="bold"
                android:translationZ="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnreport"
                />

            <Button
                android:id="@+id/btnreport"
                android:layout_width="200dp"
                android:layout_height="165dp"
                android:background="@drawable/btnd_rone_dgbevel"
                android:drawableTop="@mipmap/report_60"
                android:drawablePadding="10dp"
                android:elevation="3dp"
                android:maxLines="2"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:stateListAnimator="@null"
                android:text="@string/rp"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="25dp"
                android:textStyle="bold"
                android:translationZ="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnupdate"
                app:layout_constraintEnd_toEndOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <Button
                android:id="@+id/btnpush"
                android:layout_width="200dp"
                android:layout_height="165dp"
                android:layout_gravity="center"
                android:background="@drawable/btnd_rone_dgbevel"
                android:drawableTop="@mipmap/send_64"
                android:drawablePadding="10dp"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:elevation="3dp"
                android:translationZ="3dp"
                android:stateListAnimator="@null"
                android:maxLines="2"
                android:text="@string/syncd"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnpull"/>

            <Button
                android:id="@+id/btnpull"
                android:layout_width="200dp"
                android:layout_height="165dp"
                android:layout_gravity="center"
                android:background="@drawable/btnd_rone_dgbevel"
                android:drawableTop="@mipmap/download_48"
                android:drawablePadding="10dp"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:maxLines="2"
                android:elevation="3dp"
                android:translationZ="3dp"
                android:stateListAnimator="@null"
                android:text="@string/downlods"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnpush"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <Button
                android:id="@+id/btnquerry"
                android:layout_width="200dp"
                android:layout_height="165dp"
                android:layout_gravity="center"
                android:background="@drawable/btnd_rone_dgbevel"
                android:drawableTop="@mipmap/query_48"
                android:drawablePadding="10dp"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:maxLines="2"
                android:elevation="3dp"
                android:translationZ="3dp"
                android:stateListAnimator="@null"
                android:text="@string/query"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnloc"/>

            <Button
                android:id="@+id/btnloc"
                android:layout_width="200dp"
                android:layout_height="165dp"
                android:layout_gravity="center"
                android:background="@drawable/btnd_rone_dgbevel"
                android:drawableTop="@mipmap/house_64"
                android:drawablePadding="10dp"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:maxLines="2"
                android:elevation="3dp"
                android:translationZ="3dp"
                android:stateListAnimator="@null"
                android:text="@string/loch"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnquerry"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btninfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/btn_setting"
            android:drawablePadding="5dip"
            android:text="@string/info"
            android:textColor="@color/color_text_darkgray" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>