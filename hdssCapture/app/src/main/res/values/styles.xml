<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="android:fontFamily">@font/gordita_regular</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_textcolor</item>
        <item name="android:textViewStyle">@style/customTextViewStyle</item>
        <item name="android:buttonStyle">@style/customButtonStyle</item>
        <item name="android:dialogTheme">@style/CustomDialog</item>
        <item name="android:spinnerItemStyle">@style/spinnerStyle</item>
    </style>

    <style name="CustomDialog" parent="@style/AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="appCompatDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="android:fontFamily">@font/gordita_regular</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_textcolor</item>
        <item name="android:textViewStyle">@style/customTextViewStyle</item>
        <item name="android:buttonStyle">@style/customButtonStyle</item>
        <item name="android:spinnerItemStyle">@style/spinnerStyle</item>
    </style>

    <style name="ThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
<!--        <item name="android:fontFamily">@font/gordita_regular</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_textcolor</item>
    </style>

    <style name="SettingsScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/Red</item>
        <item name="android:textColorPrimary">#444</item>
        <item name="colorPrimary">#C85E5E</item>
        <item name="colorPrimaryDark">#C85E5E</item>
        <item name="colorAccent">#836060</item>
        <item name="android:background">@color/zxing_transparent</item>
    </style>

    <style name="spinnerStyle" parent="@style/Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textColor">#444</item>
        <item name="android:colorAccent">@color/Red</item>
        <item name="android:color">#444</item>
        <item name="overlapAnchor">true</item>
        <item name="android:background">@drawable/spinner_rone_wbevel</item>
    </style>

    <style name="customTextViewStyle" parent="@android:style/Widget.Material.Light.TextView">
<!--        <item name="android:fontFamily">@font/gordita_regular</item>-->
        <item name="android:textColor">@color/button_textcolor</item>
    </style>

    <style name="customButtonStyle" parent="@android:style/Widget.Material.Light.Button">
<!--        <item name="android:fontFamily">@font/gordita_regular</item>-->
        <item name="android:textColor">@color/button_textcolor</item>
    </style>

    <style name="customTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/customTabTextAppearance</item>
    </style>

    <style name="customTabTextAppearance" parent="TextAppearance.Design.Tab">
<!--        <item name="android:fontFamily">@font/gordita_regular</item>-->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="customSyncTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/customSyncTextAppearance</item>
    </style>

    <style name="customSyncTextAppearance" parent="TextAppearance.Design.Tab">
<!--        <item name="android:fontFamily">@font/gordita_regular</item>-->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CustomDatePickerStyle">
        <!-- Customize the appearance of the DatePicker here -->
        <!-- For example, you can set text color, background, etc. -->
        <item name="android:textColor">@color/pop</item>
        <!-- Add other custom attributes here -->
    </style>

    <style name="CustomDatePickerButtonStyle" parent="Widget.AppCompat.Button">
        <!-- Customize the text color for the button here -->
        <item name="android:textColor">@color/pop</item>
        <!-- Add other custom button attributes here -->
    </style>



    <style name="CustomDatePickerDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:datePickerStyle">@style/CustomDatePickerStyle</item>
    </style>

    <style name="AppCompatEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">Enter your text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:backgroundTint">#0077B6</item>
    </style>

    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blue_500</item>
        <item name="strokeColor">@color/blue_500</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="SupervisorButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/Green</item>
        <item name="strokeColor">@color/Green</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Custom Outlined Button Style with Underline -->
    <style name="OutlinedUnderlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/material_primary</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/material_primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:elevation">2dp</item>
        <item name="rippleColor">@color/material_ripple</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CloseButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/Red</item>
        <item name="strokeColor">@color/Red</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:padding">10dp</item>
    </style>




</resources>